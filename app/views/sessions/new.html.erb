<div class='row'>
    <div class='col s4 form-title'>Sign In:</div>
</div>
<div class='row'>
    <div class='col s4 form-body'>
    <%= form_for :user, method: 'post' do |f| %>

        <%= f.label :email, "Email:" %>
        <%= f.text_field :email %><br>

        <%= f.label :password, "Password:" %>
        <%= f.password_field :password %><br>
    
        <div class="waves-effect yellow lighten-4 btn-small">
            <%= f.submit "Sign In" %>
        </div>
    
    <% end %>
    </div>
</div>

<div class="center-align">
    <button class="waves-effect yellow lighten-4 btn-small"><%= link_to "Home Page", '/' %></button>
</div>