<h1>Let's set up your profile! </h1>

<%= form_with model: @user, method: 'post', local: true do |f| %>
<%#= form_with(url: "/users", method: "post") do |f| %>


    <%= f.label :type, "Are you a Student or Tutor?" %>
    <%= f.select :type, User.types, {include_blank: true} %><br>


    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name %><br>

    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %><br>

    <%= f.label :email, "Email" %>
    <%= f.text_field :email %><br>
    
    <%= f.label :image, "Image Url:" %>
    <%= f.text_field :image %><br>
    
    <%= f.label :password, "Create a Password" %>
    <%= f.text_field :password %><br>

    <%= f.label :confirm_password, "Confirm Password" %>
    <%= f.text_field :confirm_password %><br>

    <%= f.submit "Submit Profile!" %>

<% end %>