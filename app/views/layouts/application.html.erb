<!DOCTYPE html>
<html>
  <head>
    <title>AppWithMti</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <%= yield %>
    
    <% if session[:user_id] %>
      <button><%= link_to "Profile", user_path(current_user) %></button>
      <button><%= link_to "Log Out", '/logout', method: 'post' %></button>
    <% else %>
      <button><%= link_to "Become a Tutor!", new_tutor_path %></button>
      <button><%= link_to "Enroll as a Student!", new_student_path %></button>
      <button><%= link_to "Log In", '/login' %></button>
      <button><%= link_to('Log in with Facebook', '/auth/facebook') %></button>
    <% end %>
    
    <button><%= link_to "Home Page", '/' %></button>

  </body>
</html>
