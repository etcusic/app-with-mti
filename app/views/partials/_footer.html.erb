<div class='centered'>

  <% if !logged_in? %>
   
    <button><%= link_to "Log In", '/login' %></button>
    <button><%= link_to "Create Profile!", new_user_path %></button> 
    <button><%= link_to 'Log in with Facebook', '/auth/facebook' %></button>
    
    <% if !tutors_index? %>
      <button><%= link_to "Meet the Tutors!", '/tutors' %></button>
    <% end %>

  <% else %>

    <% if !user_profile? %>
      <button><%= link_to "Profile", user_path(current_user) %></button>
    <% end %>

    <% if current_user.is_student? %>
      <% if !tutors_index? %>
        <button><%= link_to "All Tutors", tutors_path %></button>
      <% end %>

      <% if !highly_rated_tutors? %>
        <button><%= link_to "Highest Rated Tutors!", '/tutors/highly_rated' %></button>
      <% end %>
    <% end %>

    <% if user_profile? %>
        <button><%= link_to "Edit Profile", edit_user_path(current_user) %></button>
    <% end %>

    <button><%= link_to "Log Out", '/logout', method: 'post' %></button>

  <% end %>

  <% if params[:action] != "home" %>
    <button><%= link_to "Home Page", '/' %></button>
  <% end %>
  <%# binding.pry %>
</div>
