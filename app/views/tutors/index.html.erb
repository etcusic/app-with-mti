<% if params[:action] == "index" %>
    <h1>All Tutors (listed in order of rating)</h1>
<% elsif params[:action] == "highly_rated" %>
    <h1>Highly rated tutors (50+ rating)</h1>
<% end %>

<ul>
     <% @tutors.each do |tutor| %>
        <li class='tutors'>
            <%= link_to "#{tutor.full_name}", tutor_path(tutor) %>
            (rating: <%= tutor.rating %>)<br>
            <img src="<%= tutor.image %>", alt="tutor photo here">
        </li>
    <% end %>
</ul>

<br><br>

<div class='centered'>
    <button><%= link_to "Profile", current_user.url %></button>
    <button><%= link_to "Home Page", '/' %></button>
</div>