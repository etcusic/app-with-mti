<img class='profile-photo' src="<%= public_profile.image %>", alt="profile pic goes here">

<% if @user.errors.any? %>
    <ul>
        <% @user.errors.messages.each do |msg| %>
            <li><%= display_errors(msg) %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @user, method: 'patch', local: true do |f| %>

    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name %><br>

    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %><br>

    <%= f.label :email, "Email" %>
    <%= f.text_field :email %><br>
    
    <%= f.label :image, "Image Url:" %>
    <%= f.text_field :image %><br>
    
    <%= f.label :zoom_link, "Zoom Link:" %>
    <%= f.text_field :zoom_link %><br>

    <%= f.label :resume, "Resume:" %><br>
    <%= f.text_area :resume %><br>

    <%= f.label :puppets, "Puppets? [y/n]" %>
    <%= f.check_box :puppets %><br>
    
    <%= f.submit "Submit Profile!" %>

<% end %>

<h3>-- OR --</h3>

<%= button_to "Delete Yo' Self", user_path(@user), method: :delete, confirm: "Are you sure?" %>

