<h1>Create your profile! </h1>

<%= render partial: "partials/user_errors" %>

<%= form_with model: @user, local: true do |f| %>

    <%= f.hidden_field :type, value: "Tutor" %>

    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name %><br>

    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %><br>

    <%= f.label :email, "Email" %>
    <%= f.text_field :email %><br>
    
    <%= f.label :image, "Image Url:" %>
    <%= f.text_field :image %><br>
    
    <%= f.label :zoom_link, "Zoom Link:" %>
    <%= f.text_field :zoom_link %><br>

    <%= f.label :resume, "Resume:" %><br>
    <%= f.text_area :resume %><br>

    <%= f.label :puppets, "Puppets? [y/n]" %>
    <%= f.check_box :puppets %><br>

    <%= f.label :password, "Password" %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation %><br>

    <%= f.submit "Submit Profile!" %>

<% end %>


<br><br>

<div>
    <button><%= link_to "Home Page", '/' %></button>
</div>