<%= render partial: 'partials/user_errors' %>

<img class='profile-photo' src="<%= public_profile.image %>", alt="profile pic goes here">

<%= form_with model: @user, method: 'patch', local: true do |f| %>

    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name %><br>

    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %><br>

    <%= f.label :email, "Email" %>
    <%= f.text_field :email %><br>

    <%= f.label :image, "Image Url:" %>
    <%= f.text_field :image %><br>
    
    <%= f.label :level, "Level:" %>
    <%= f.number_field :level, in: 1..50 %><br>

    <%= f.label :about_me, "Tell us a bit about yourself:" %><br>
    <%= f.text_area :about_me %><br>

    <%= f.label :helicopter_parent, "Do you have a helicopter parent? [y/n]" %>
    <%= f.check_box :helicopter_parent %><br>
    
    <%= f.hidden_field :category, value: "Student" %>

    <%= f.submit "Submit Changes" %>

<% end %>

<h3>-- OR --</h3>

<%= button_to "Delete Yo' Self", user_path(@user), method: :delete, confirm: "Are you sure?" %>

