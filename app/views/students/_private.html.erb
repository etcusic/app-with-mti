<h1>Welcome <%= "#{current_user.full_name}!" %></h1>

<div class='users-profile'>
    <% if current_user.gold_stars %>
        <h2>Gold Stars: <%= current_user.gold_stars %></h2>
    <% end %>
    
    <h2>Current Level: <%= current_user.level %></h2>

    <h2>Your Appointments:</h2>
    <ul>
        <% current_user.appointments_by_date.each do |appt| %>
            <li><%= link_to "#{appt.tutor.full_name}: #{appt.time}", edit_student_appointment_path(current_user, appt) %></li>
        <% end %>
    </ul>

    <button><%= link_to "Create Appointment!", new_appointment_path %></button>

</div>

<br><br>

<div>
    <button><%= link_to "All Tutors", tutors_path %></button>
    <button><%= link_to "Highest Rated Tutors", '/tutors/highly_rated' %></button>
    <button><%= link_to "Edit Profile", edit_student_path(current_user) %></button>
    <button><%= link_to "Log Out", '/logout', method: 'post' %></button>
    <button><%= link_to "Home Page", '/' %></button>
</div>