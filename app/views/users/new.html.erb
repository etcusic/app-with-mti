<h1>Create your profile! </h1>

<% render partial: "partials/user_errors" %>

<%= form_with model: @user, local: true do |f| %>
<%#= form_with url: user_path, method: 'post', local: true do |f| %>

    <%= f.label :category, "Are you a Student or Tutor?" %>
    <%= f.select :category, User.types, {include_blank: true} %><br>

    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name %><br>

    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %><br>

    <%= f.label :email, "Email" %>
    <%= f.text_field :email %><br>
    
    <%= f.label :image, "Image Url:" %>
    <%= f.text_field :image %><br>
    
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation %><br>

    <%= f.submit "Submit Profile!" %>

<% end %>