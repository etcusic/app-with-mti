<% if @user.errors.any? %>
    <ul>
    <% @user.errors.messages.each do |msg| %>
        <li><%= display_errors(msg) %></li>
    <% end %>
    </ul>
<% end %>

<h1>New User: </h1>
<%= form_with model: @user, local: true do |f| %>

    <%= f.label :type, "Are you a Student or Tutor?" %>
    <%= f.select :type, User.types, {include_blank: true} %><br>

    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name %><br>

    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %><br>

    <%= f.label :email, "Email" %>
    <%= f.text_field :email %><br>
    
    <%= f.label :image, "Image Url:" %>
    <%= f.text_field :image %><br>
    
    <%= f.label :password, "Password" %>
    <%= f.text_field :password %><br>

    <%#= password_field "person", "password" %>
    <%#= password_field "person", "password_confirmation" %>

    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.text_field :password_confirmation %><br>

    <%= f.submit "Submit Profile!" %>

<% end %>